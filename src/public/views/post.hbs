<body class="m-0 p-0 bg-gray-100">

  <!-- Primary Page Layout
  –––––––––––––––––––––––––––––––––––––––––––––––––– -->

  <section class="mx-auto max-w-xl bg-gray-300 mb-16">
    <div class="w-full px-2 pt-4">
      <h1 class="text-indigo-900 text-center text-3xl font-bold relative w-full">
        Post Your Job
      </h1>
      <h4 class="text-sm text-center underline text-gray-600 italic">Sorry, Feature is currently unavailable!</h4>
      <hr>

      <p class="leading-normal text-lg mt-10 text-center mx-auto max-w-md w-full"> 

        {{#unless error}}
          {{#submitted message 'OK'}}
          Signed Up Successfully, You'll be notified when the feature will be up. <span class="text-sm">Thank you for showing interest.</span>
          {{else}}
          {{{ message }}}
          {{/submitted}}

        {{/unless}}
        {{#if error}}
        <span class="text-xl font-bold">
          {{error}}
        </span>
        {{/if}}

      </p>

    </div>

    {{#submitted message 'OK'}}

      <a href="/" class="max-w-xs block mx-auto mt-4 bg-red-600 hover:bg-red-500 hover:shadow-lg text-base text-white py-1 text-center px-4 rounded" 
      >Go Back</a>

    {{else}}

      <form action="/users/signup" method="post" class="w-full max-w-md mx-auto mt-2 px-2">
        <div class="flex items-center border-b border-b-2 border-orange-700 py-2">
        <input 
          class="appearance-none text-lg bg-transparent border-none w-full text-gray-700 mr-3 py-1 px-2 leading-tight focus:outline-none" 
          type="email"
          name="email"
          placeholder="joker@gotham.com" 
          aria-label="Email-address"
        >
        <button 
          class="flex-shrink-0 bg-red-600 hover:bg-red-500 hover:shadow-xl text-base text-white py-1 px-12 rounded" 
          type="submit"
        >
          Sign Up
        </button>

      </div>
      </form>

    {{/submitted}}

  </section>


</body>

